<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.aramshim.headtilttest.ImageView2
        android:id="@+id/graphicView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="212dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="288dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="360dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="36dp"
        android:text="Init"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMenuNumPlus"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="+"
        app:layout_constraintStart_toStartOf="@id/button"
        app:layout_constraintTop_toBottomOf="@id/button" />

    <Button
        android:id="@+id/buttonMenuNumMinus"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@id/buttonMenuNumPlus"
        app:layout_constraintTop_toBottomOf="@id/button" />

    <TextView
        android:id="@+id/textViewMenuNum"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="1"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/buttonMenuNumMinus"
        app:layout_constraintTop_toBottomOf="@+id/textViewAnswer" />

    <Button
        android:id="@+id/buttonAngleXPlus"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginStart="236dp"
        android:layout_marginTop="44dp"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/graphicView" />

    <Button
        android:id="@+id/buttonAngleXMinus"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginStart="4dp"
        android:layout_marginTop="44dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@id/buttonAngleXPlus"
        app:layout_constraintTop_toTopOf="@+id/graphicView" />

    <TextView
        android:id="@+id/maxAngleX"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="90"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/buttonAngleXMinus"
        app:layout_constraintTop_toTopOf="@+id/graphicView" />

    <Button
        android:id="@+id/buttonAngleYPlus"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginTop="8dp"
        android:text="+"
        app:layout_constraintStart_toStartOf="@id/buttonAngleXPlus"
        app:layout_constraintTop_toBottomOf="@id/buttonAngleXPlus" />

    <Button
        android:id="@+id/buttonAngleYMinus"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="-"
        app:layout_constraintStart_toEndOf="@id/buttonAngleYPlus"
        app:layout_constraintTop_toBottomOf="@id/buttonAngleXPlus" />

    <TextView
        android:id="@+id/maxAngleY"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="90"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@id/buttonAngleYMinus"
        app:layout_constraintTop_toBottomOf="@id/buttonAngleXPlus" />

    <TextView
        android:id="@+id/textViewAnswer"
        android:layout_width="120px"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="@+id/graphicView" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="384dp"
        android:text="Start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />


    <Button
        android:id="@+id/buttonEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="384dp"
        android:text="End"
        app:layout_constraintStart_toEndOf="@+id/buttonStart"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <Button
        android:id="@+id/buttonCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="384dp"
        android:text="Check"
        app:layout_constraintStart_toEndOf="@+id/buttonEnd"
        app:layout_constraintTop_toBottomOf="@+id/editText" />


</android.support.constraint.ConstraintLayout>